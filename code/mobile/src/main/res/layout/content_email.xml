<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="me.danieldobalian.balance.Email"
    tools:showIn="@layout/activity_email">


    <ImageView
        android:layout_width="129.75dp"
        android:layout_height="88.5dp"
        android:id="@+id/imageView"
        android:src="@drawable/balancelogo"
        android:background="#EB5757"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/zipPrompt"
        android:text="Enter Your Medical Professional's Email"
        android:typeface="normal"
        android:textColor="#000000"
        android:textSize="16dp"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:paddingTop="40px" />

    <EditText
        android:layout_width="500px"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/drEnter"
        android:hint="Email"
        android:textSize="16dp"
        android:clickable="true"
        android:windowSoftInputMode="stateVisible"
        android:backgroundTint="#303030"
        android:textColorHint="#888c91"
        android:textColor="#FFFFFF"
        android:maxLength="5"
        android:maxLines="1"
        android:paddingBottom="50px"
        android:gravity="center"
        android:layout_below="@+id/zipPrompt"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send"
        android:id="@+id/drInput"
        android:background="#EB5757"
        android:textColor="#FFFFFF"
        android:paddingLeft="300px"
        android:paddingRight="300px"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
